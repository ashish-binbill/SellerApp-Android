<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#d7d7d7" />
            <size
                android:width="16dp"
                android:height="16dp" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="oval">
            <solid
                android:width="1dp"
                android:color="@color/colorAccent" />

        </shape>
    </item>
</layer-list>