<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="@dimen/dimen_10dp">

        <include layout="@layout/app_toolbar" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/mainLinear"
        android:layout_width="match_parent"
        android:background="#dcf4ff"
        android:weightSum="100"
        android:padding="@dimen/dimen_15dp"
        android:layout_below="@+id/app_bar_layout"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_error_email"
            android:layout_width="0dp"
            android:layout_weight="100"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:fontFamily="sans-serif"
            android:text="Free Home Delivery for all orders"
            android:layout_below="@id/et_email"
            android:textColor="#444444"
            android:textSize="@dimen/dimen_14dp"
            android:layout_gravity="center"
            android:textStyle="normal"
            android:visibility="visible" />

        <Switch
            android:id="@+id/simpleSwitch"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_below="@id/mainLinear"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_60dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/item_rel_100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="150"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_amt_less_100"
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:fontFamily="sans-serif"
                    android:gravity="left|center"
                    android:text="Order Amount less than ₹100"
                    android:layout_below="@id/et_email"
                    android:textColor="#444444"
                    android:textSize="@dimen/dimen_14dp"
                    android:layout_gravity="center"
                    android:textStyle="normal"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_equals"
                    android:layout_width="0dp"
                    android:layout_weight="15"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="right"
                    android:text="="
                    android:layout_below="@id/et_email"
                    android:textColor="#444444"
                    android:textSize="@dimen/dimen_14dp"
                    android:layout_gravity="center"
                    android:textStyle="normal"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/et_amt_less_100"
                    android:layout_width="0dp"
                    android:layout_weight="35"
                    android:gravity="center|left"
                    android:layout_height="@dimen/dimen_48dp"
                    android:layout_below="@id/tv_message"
                    android:background="@drawable/edittext_bg"
                    android:hint=""
                    android:inputType="numberDecimal"
                    android:lineSpacingExtra="-1sp"
                    android:layout_marginLeft="@dimen/dimen_24dp"
                    android:layout_marginRight="@dimen/dimen_24dp"
                    android:paddingLeft="@dimen/dimen_12dp"
                    android:paddingRight="@dimen/dimen_12dp"
                    android:textColor="@color/text_44"
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/dimen_15dp" />

            </LinearLayout>

            <View
                android:id="@+id/separator_1"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_2dp"
                android:layout_below="@id/item_rel_100"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:visibility="visible"
                android:background="@color/light_grey" />


            <LinearLayout
                android:id="@+id/item_rel_101_300"
                android:layout_width="match_parent"
                android:layout_below="@+id/separator_1"
                android:layout_height="wrap_content"
                android:weightSum="150"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_amt_101_300"
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:fontFamily="sans-serif"
                    android:gravity="left|center"
                    android:text="Order Amount between ₹100 - ₹300"
                    android:layout_below="@id/et_email"
                    android:textColor="#444444"
                    android:textSize="@dimen/dimen_14dp"
                    android:layout_gravity="center"
                    android:textStyle="normal"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="15"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="right"
                    android:text="="
                    android:layout_below="@id/et_email"
                    android:textColor="#444444"
                    android:textSize="@dimen/dimen_14dp"
                    android:layout_gravity="center"
                    android:textStyle="normal"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/et_amt_101_300"
                    android:layout_width="0dp"
                    android:layout_weight="35"
                    android:gravity="center|left"
                    android:layout_height="@dimen/dimen_48dp"
                    android:layout_below="@id/tv_message"
                    android:background="@drawable/edittext_bg"
                    android:hint=""
                    android:inputType="numberDecimal"
                    android:lineSpacingExtra="-1sp"
                    android:layout_marginLeft="@dimen/dimen_24dp"
                    android:layout_marginRight="@dimen/dimen_24dp"
                    android:paddingLeft="@dimen/dimen_12dp"
                    android:paddingRight="@dimen/dimen_12dp"
                    android:textColor="@color/text_44"
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/dimen_15dp" />

            </LinearLayout>

            <View
                android:id="@+id/separator_2"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_2dp"
                android:layout_below="@id/item_rel_101_300"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:visibility="visible"
                android:background="@color/light_grey" />

            <LinearLayout
                android:id="@+id/item_rel_301_499"
                android:layout_width="match_parent"
                android:layout_below="@+id/separator_2"
                android:layout_height="wrap_content"
                android:weightSum="150"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_amt_301_499"
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:fontFamily="sans-serif"
                    android:gravity="left|center"
                    android:text="Order Amount between ₹300 - ₹500"
                    android:layout_below="@id/et_email"
                    android:textColor="#444444"
                    android:textSize="@dimen/dimen_14dp"
                    android:layout_gravity="center"
                    android:textStyle="normal"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="15"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="right"
                    android:text="="
                    android:layout_below="@id/et_email"
                    android:textColor="#444444"
                    android:textSize="@dimen/dimen_14dp"
                    android:layout_gravity="center"
                    android:textStyle="normal"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/et_amt_301_499"
                    android:layout_width="0dp"
                    android:layout_weight="35"
                    android:gravity="center|left"
                    android:layout_height="@dimen/dimen_48dp"
                    android:layout_below="@id/tv_message"
                    android:background="@drawable/edittext_bg"
                    android:hint=""
                    android:inputType="numberDecimal"
                    android:lineSpacingExtra="-1sp"
                    android:layout_marginLeft="@dimen/dimen_24dp"
                    android:layout_marginRight="@dimen/dimen_24dp"
                    android:paddingLeft="@dimen/dimen_12dp"
                    android:paddingRight="@dimen/dimen_12dp"
                    android:textColor="@color/text_44"
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/dimen_15dp" />

            </LinearLayout>

            <View
                android:id="@+id/separator_3"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_2dp"
                android:layout_below="@id/item_rel_301_499"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:visibility="visible"
                android:background="@color/light_grey" />

            <LinearLayout
                android:id="@+id/item_rel_500"
                android:layout_width="match_parent"
                android:layout_below="@+id/separator_3"
                android:layout_height="wrap_content"
                android:weightSum="150"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_amt_500"
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:fontFamily="sans-serif"
                    android:gravity="left|center"
                    android:text="Order Amount more than ₹500"
                    android:layout_below="@id/et_email"
                    android:textColor="#444444"
                    android:textSize="@dimen/dimen_14dp"
                    android:layout_gravity="center"
                    android:textStyle="normal"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="15"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="right"
                    android:text="="
                    android:layout_below="@id/et_email"
                    android:textColor="#444444"
                    android:textSize="@dimen/dimen_14dp"
                    android:layout_gravity="center"
                    android:textStyle="normal"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/et_amt_500"
                    android:layout_width="0dp"
                    android:layout_weight="35"
                    android:gravity="left|center"
                    android:layout_height="@dimen/dimen_48dp"
                    android:layout_below="@id/tv_message"
                    android:background="@drawable/edittext_bg"
                    android:hint=""
                    android:inputType="numberDecimal"
                    android:lineSpacingExtra="-1sp"
                    android:layout_marginLeft="@dimen/dimen_24dp"
                    android:layout_marginRight="@dimen/dimen_24dp"
                    android:paddingLeft="@dimen/dimen_12dp"
                    android:paddingRight="@dimen/dimen_12dp"
                    android:textColor="@color/text_44"
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/dimen_15dp" />

            </LinearLayout>

            <View
                android:id="@+id/separator_4"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_2dp"
                android:layout_below="@id/item_rel_500"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:visibility="visible"
                android:background="@color/light_grey" />


        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
    <com.binbill.seller.CustomViews.SquareAppButton
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_55dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:lineSpacingExtra="-5.5sp"
        android:text="@string/save"
        android:layout_alignParentBottom="true"
        android:textColor="@color/color_white"
        android:visibility="visible"
        app:sizeOfText="@dimen/dimen_20dp" />
</RelativeLayout>