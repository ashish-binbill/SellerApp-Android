<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_10dp"
    android:background="@color/color_white"
    app:cardCornerRadius="@dimen/dimen_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/iv_offer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_150dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_offer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:text="Flat 20% OFF on shopping upto 2000"
            android:textColor="@color/text_44"
            android:textSize="@dimen/dimen_16dp" />

        <TextView
            android:id="@+id/tv_offer_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tem incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip."
            android:textColor="@color/text_44"
            android:textSize="@dimen/dimen_12dp" />


        <TextView
            android:id="@+id/tv_offer_expiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:text="Expire on : 22 Jul, 2018"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/dimen_12dp" />

        <TextView
            android:id="@+id/tv_offer_already_added"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:visibility="gone"
            android:textColor="@color/color_33c600"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:text="Added to Your Offer List"
            />


        <LinearLayout
            android:id="@+id/ll_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_add_to_offer"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_cylinder"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_10dp"
                android:text="@string/add_to_your_offers_list"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_12dp" />

            <Button
                android:id="@+id/btn_need_this_item"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_cylinder_stroke"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_10dp"
                android:text="@string/i_need_this_item"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/dimen_12dp" />

            <ImageView
                android:id="@+id/iv_offer_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_delete_big" />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>