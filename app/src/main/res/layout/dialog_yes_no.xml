<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_20dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_1dp"
        android:background="@color/color_white"
        app:cardCornerRadius="@dimen/dimen_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:background="@color/colorAccent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_10dp">

                <TextView
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@drawable/ic_cancel_white"
                    android:gravity="center_vertical"
                    android:text="@string/create_offer"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/dimen_12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_30dp"
                android:paddingLeft="@dimen/dimen_20dp"
                android:paddingRight="@dimen/dimen_20dp"
                android:paddingTop="@dimen/dimen_30dp">

                <ImageView
                    android:id="@+id/image"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_mrp_disclaimer"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:text="@string/delete_offer"
                    android:textColor="@color/text_44"
                    android:textSize="@dimen/dimen_16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_30dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.binbill.seller.CustomViews.AppButtonGreyed
                        android:id="@+id/btn_no"
                        android:layout_width="@dimen/dimen_100dp"
                        android:layout_height="@dimen/dimen_40dp"
                        android:layout_marginRight="@dimen/dimen_5dp"
                        android:gravity="center"
                        android:text="@string/string_no" />

                    <com.binbill.seller.CustomViews.AppButton
                        android:id="@+id/btn_yes"
                        android:layout_width="@dimen/dimen_100dp"
                        android:layout_height="@dimen/dimen_40dp"
                        android:layout_marginLeft="@dimen/dimen_5dp"
                        android:gravity="center"
                        android:textSize="@dimen/dimen_20dp"
                        android:text="@string/string_yes" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>