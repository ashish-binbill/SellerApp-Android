<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="@dimen/dimen_10dp">

            <include layout="@layout/app_toolbar" />
        </android.support.design.widget.AppBarLayout>

        <include
            layout="@layout/layout_shimmer_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_upper_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_order_status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/dimen_10dp"
                            android:text="New Order"
                            android:textColor="@color/status_red"
                            android:textSize="@dimen/dimen_16dp" />

                        <TextView
                            android:id="@+id/tv_home_delivery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawableLeft="@drawable/ic_home_delivery_order"
                            android:drawablePadding="@dimen/dimen_5dp"
                            android:gravity="end"
                            android:padding="@dimen/dimen_10dp"
                            android:text="@string/home_delivery"
                            android:textColor="@color/status_red"
                            android:textSize="@dimen/dimen_11dp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_1dp"
                        android:background="@color/border_grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_white"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dimen_5dp"
                        android:paddingLeft="@dimen/dimen_15dp"
                        android:paddingRight="@dimen/dimen_15dp"
                        android:paddingTop="@dimen/dimen_15dp">

                        <include
                            android:id="@+id/rl_user_image"
                            layout="@layout/layout_no_user_image" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_20dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dimen_10dp"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif-medium"
                                    android:lineSpacingExtra="2sp"
                                    android:text=""
                                    android:textColor="@color/text_44"
                                    android:textSize="@dimen/dimen_14dp" />


                                <FrameLayout
                                    android:id="@+id/fl_icon_chat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:visibility="gone">

                                    <ImageView
                                        android:layout_width="@dimen/dimen_35dp"
                                        android:layout_height="@dimen/dimen_35dp"
                                        android:src="@drawable/ic_chat" />

                                    <TextView
                                        android:id="@+id/tv_unread_message"
                                        android:layout_width="@dimen/dimen_20dp"
                                        android:layout_height="@dimen/dimen_20dp"
                                        android:layout_gravity="right"
                                        android:layout_marginLeft="@dimen/dimen_20dp"
                                        android:background="@drawable/circle_bg_grey"
                                        android:backgroundTint="@color/colorAccent"
                                        android:gravity="center"
                                        android:text=""
                                        android:textColor="#ffffff"
                                        android:textSize="@dimen/dimen_10dp"
                                        android:textStyle="bold" />

                                </FrameLayout>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_5dp"
                                android:lineSpacingExtra="3sp"
                                android:text=""
                                android:textColor="@color/text_44"
                                android:textSize="@dimen/dimen_12dp" />

                            <TextView
                                android:id="@+id/tv_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_7dp"
                                android:lineSpacingExtra="7.5sp"
                                android:text=""
                                android:textColor="@color/text_44"
                                android:textSize="@dimen/dimen_12dp" />

                            <LinearLayout
                                android:id="@+id/ll_call_customer"
                                android:layout_width="@dimen/dimen_70dp"
                                android:layout_height="@dimen/dimen_30dp"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/dimen_10dp"
                                android:background="@drawable/cyclinder_bg_filled"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:src="@drawable/ic_call_white"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="@dimen/dimen_5dp"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/call"
                                    android:textColor="@color/color_white" />
                            </LinearLayout>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/header_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|bottom"
                            android:fontFamily="sans-serif-medium"
                            android:src="@drawable/paid_credit_watermark"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_delivery_header_fmcg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/delivery_agent"
                    android:textColor="@color/text_44"
                    android:textSize="@dimen/dimen_14dp"
                    android:visibility="gone" />

                <include
                    android:id="@+id/cv_root_fmcg_delivery"
                    layout="@layout/row_delivery_agent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_15dp"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:background="@color/border_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dimen_10dp"
                    android:paddingTop="@dimen/dimen_10dp">

                    <TextView
                        android:id="@+id/header_shopping_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_25dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/shopping_list"
                        android:textColor="@color/text_77"
                        android:textSize="@dimen/dimen_9dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:background="@color/border_grey" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_shopping_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:nestedScrollingEnabled="false"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />

                <TextView
                    android:id="@+id/tv_delivery_header_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/delivery_agent"
                    android:textColor="@color/text_44"
                    android:textSize="@dimen/dimen_14dp"
                    android:visibility="gone" />

                <include
                    android:id="@+id/cv_root_delivery"
                    layout="@layout/row_delivery_agent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_15dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_bill_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_1dp"
                        android:background="@color/border_grey" />

                    <LinearLayout
                        android:id="@+id/start_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_start_time_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/started_time"
                            android:textColor="@color/text_77"
                            android:textSize="@dimen/dimen_14dp" />

                        <TextView
                            android:id="@+id/tv_start_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text=""
                            android:textColor="@color/text_77"
                            android:textSize="@dimen/dimen_14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/end_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_end_time_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/end_time"
                            android:textColor="@color/text_77"
                            android:textSize="@dimen/dimen_14dp" />

                        <TextView
                            android:id="@+id/tv_end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text=""
                            android:textColor="@color/text_77"
                            android:textSize="@dimen/dimen_14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/time_elapsed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_time_elapsed_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/time_elapsed"
                            android:textColor="@color/text_44"
                            android:textSize="@dimen/dimen_14dp" />

                        <TextView
                            android:id="@+id/tv_time_elapsed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="end"
                            android:text=""
                            android:textColor="@color/text_44"
                            android:textSize="@dimen/dimen_14dp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/v_divider"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_2dp"
                        android:layout_marginTop="@dimen/dimen_15dp"
                        android:background="@color/border_grey" />

                    <LinearLayout
                        android:id="@+id/lv_total_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/total_amount"
                            android:textColor="@color/text_44"
                            android:textSize="@dimen/dimen_14dp" />

                        <TextView
                            android:id="@+id/tv_total_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="end"
                            android:text=""
                            android:textColor="@color/text_44"
                            android:textSize="@dimen/dimen_14dp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_amount_entry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:id="@+id/v_divider_amount"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_2dp"
                        android:layout_marginTop="@dimen/dimen_15dp"
                        android:background="@color/border_grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/total_amount"
                            android:textColor="@color/text_44"
                            android:textSize="@dimen/dimen_14dp" />

                        <com.binbill.seller.CustomViews.PrefixEditText
                            android:id="@+id/et_total_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimen_40dp"
                            android:layout_marginLeft="@dimen/dimen_5dp"
                            android:background="@drawable/edittext_bg_order"
                            android:enabled="false"
                            android:hint="E.g 100"
                            android:inputType="numberDecimal"
                            android:minWidth="@dimen/dimen_120dp"
                            android:paddingLeft="@dimen/dimen_10dp"
                            android:paddingRight="@dimen/dimen_10dp"
                            android:textColor="@color/text_77"
                            android:textColorHint="@color/text_77_80"
                            android:textSize="@dimen/dimen_14dp"
                            app:prefix_string="@string/rupee_sign" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_offer_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/amount_after_discount"
                            android:textColor="@color/text_44"
                            android:textSize="@dimen/dimen_14dp" />

                        <com.binbill.seller.CustomViews.PrefixEditText
                            android:id="@+id/et_offered_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimen_40dp"
                            android:layout_marginLeft="@dimen/dimen_5dp"
                            android:background="@null"
                            android:enabled="false"
                            android:hint="E.g 100"
                            android:inputType="numberDecimal"
                            android:minWidth="@dimen/dimen_120dp"
                            android:paddingLeft="@dimen/dimen_10dp"
                            android:paddingRight="@dimen/dimen_10dp"
                            android:textColor="@color/color_33c600"
                            android:textColorHint="@color/text_77_80"
                            android:textSize="@dimen/dimen_14dp"
                            app:prefix_string="@string/rupee_sign" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_review_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_10dp">

                    <TextView
                        android:id="@+id/tv_delivery_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:text="@string/delivery_experience"
                        android:textColor="@color/text_44"
                        android:textSize="@dimen/dimen_14dp"
                        android:visibility="gone" />

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/cv_delivery_review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_2dp"
                        android:layout_marginLeft="@dimen/dimen_1dp"
                        android:layout_marginRight="@dimen/dimen_1dp"
                        android:layout_marginTop="@dimen/dimen_3dp"
                        android:background="@color/color_white"
                        android:elevation="@dimen/dimen_10dp"
                        android:visibility="gone"
                        app:cardCornerRadius="@dimen/dimen_10dp">

                        <include
                            android:id="@+id/rl_delivery_review"
                            layout="@layout/row_review" />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:id="@+id/tv_seller_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_15dp"
                        android:text="@string/seller_responseivness"
                        android:textColor="@color/text_44"
                        android:textSize="@dimen/dimen_14dp"
                        android:visibility="gone" />

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/cv_seller_review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_2dp"
                        android:layout_marginLeft="@dimen/dimen_1dp"
                        android:layout_marginRight="@dimen/dimen_1dp"
                        android:layout_marginTop="@dimen/dimen_3dp"
                        android:background="@color/color_white"
                        android:elevation="@dimen/dimen_10dp"
                        android:visibility="gone"
                        app:cardCornerRadius="@dimen/dimen_10dp">

                        <include
                            android:id="@+id/rl_seller_review"
                            layout="@layout/row_review" />

                    </android.support.v7.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:id="@id/ll_user_action"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <FrameLayout
                        android:id="@+id/frame_decline"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen_55dp"
                        android:layout_marginRight="@dimen/dimen_2dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_button_grey"
                        android:visibility="visible">

                        <ProgressBar
                            android:id="@+id/btn_decline_progress"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/color_white"
                            android:foregroundGravity="center"
                            android:gravity="center"
                            android:indeterminate="true"
                            android:indeterminateTint="@color/color_white"
                            android:indeterminateTintMode="src_in"
                            android:secondaryProgress="@color/color_white"
                            android:visibility="gone" />

                        <com.binbill.seller.CustomViews.AppButtonGreyed
                            android:id="@+id/btn_decline"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_55dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/dimen_2dp"
                            android:gravity="center"
                            android:text="@string/decline"
                            android:textSize="@dimen/dimen_16dp"
                            android:visibility="visible" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen_55dp"
                        android:layout_marginLeft="@dimen/dimen_2dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_button">

                        <ProgressBar
                            android:id="@+id/btn_accept_progress"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/color_white"
                            android:foregroundGravity="center"
                            android:gravity="center"
                            android:indeterminate="true"
                            android:indeterminateTint="@color/color_white"
                            android:indeterminateTintMode="src_in"
                            android:secondaryProgress="@color/color_white"
                            android:visibility="gone" />

                        <com.binbill.seller.CustomViews.AppButton
                            android:id="@+id/btn_accept"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_55dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/accept"
                            app:sizeOfText="@dimen/dimen_16dp" />
                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

    <include layout="@layout/full_screen_loader" />

</FrameLayout>
