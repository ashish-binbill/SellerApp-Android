<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.binbill.seller.Dashboard.ProfileActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="@dimen/dimen_10dp">

        <include layout="@layout/app_toolbar" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/off_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_shop_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dimen_120dp"
                android:scaleType="fitXY"
                android:src="@drawable/offer_banner_3" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_1dp"
                android:elevation="@dimen/dimen_10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_edit"
                        android:lineSpacingExtra="2.5sp"
                        android:padding="@dimen/dimen_12dp"
                        android:text="@string/basic_details"
                        android:textColor="@color/text_44"
                        android:textSize="@dimen/dimen_10dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_1dp"
                        android:background="@color/border_grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dimen_15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Caputoâ€™s Bake Shop"
                            android:textColor="@color/text_44"
                            android:textSize="@dimen/dimen_14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_15dp"
                            android:gravity="center_horizontal"
                            android:lineSpacingExtra="2.5sp"
                            android:paddingLeft="@dimen/dimen_15dp"
                            android:paddingRight="@dimen/dimen_15dp"
                            android:text="C-534A, Ground Floor, HSB Building, Dr. Ambedkar Road, New Delhi - 110015"
                            android:textColor="@color/text_44"
                            android:textSize="@dimen/dimen_10dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View
                                android:layout_width="@dimen/dimen_150dp"
                                android:layout_height="@dimen/dimen_1dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dimen_20dp"
                                android:background="@color/border_grey" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_12dp"
                                android:gravity="center_horizontal"
                                android:lineSpacingExtra="2.5sp"
                                android:textColor="@color/text_44"
                                android:textSize="@dimen/dimen_10dp"
                                tools:text="Food &amp; Restaurant" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_1dp"
                android:layout_marginLeft="@dimen/dimen_1dp"
                android:layout_marginRight="@dimen/dimen_1dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:elevation="@dimen/dimen_10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_edit"
                        android:lineSpacingExtra="2.5sp"
                        android:padding="@dimen/dimen_12dp"
                        android:text="@string/other_details"
                        android:textColor="@color/text_44"
                        android:textSize="@dimen/dimen_10dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_1dp"
                        android:background="@color/border_grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dimen_10dp"
                        android:paddingLeft="@dimen/dimen_15dp"
                        android:paddingRight="@dimen/dimen_15dp"
                        android:paddingTop="@dimen/dimen_15dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Open Days : "
                            android:textColor="@color/text_44"
                            android:textSize="@dimen/dimen_10dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="S  M  W  T  F  S  S"
                            android:textColor="@color/text_44"
                            android:textSize="@dimen/dimen_10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dimen_10dp"
                        android:paddingLeft="@dimen/dimen_15dp"
                        android:paddingRight="@dimen/dimen_15dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Open Timings : "
                            android:textColor="@color/text_44"
                            android:textSize="@dimen/dimen_10dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="10:00 am  - 9:00 pm"
                            android:textColor="@color/text_44"
                            android:textSize="@dimen/dimen_10dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dimen_10dp"
                        android:paddingLeft="@dimen/dimen_15dp"
                        android:paddingRight="@dimen/dimen_15dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Home Delivery :"
                            android:textColor="@color/text_44"
                            android:textSize="@dimen/dimen_10dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Yes\n(Within 7 km, between 10:00am to 9:00pm)"
                            android:textColor="@color/text_44"
                            android:textSize="@dimen/dimen_10dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dimen_10dp"
                        android:paddingLeft="@dimen/dimen_15dp"
                        android:paddingRight="@dimen/dimen_15dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Payment Mode :"
                            android:textColor="@color/text_44"
                            android:textSize="@dimen/dimen_10dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Paytm | COD | Credit/ Debit Card"
                            android:textColor="@color/text_44"
                            android:textSize="@dimen/dimen_10dp" />

                    </LinearLayout>


                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_1dp"
                android:layout_marginLeft="@dimen/dimen_1dp"
                android:layout_marginRight="@dimen/dimen_1dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:elevation="@dimen/dimen_10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_edit"
                        android:lineSpacingExtra="2.5sp"
                        android:padding="@dimen/dimen_12dp"
                        android:text="@string/business_details"
                        android:textColor="@color/text_44"
                        android:textSize="@dimen/dimen_10dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_1dp"
                        android:background="@color/border_grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dimen_15dp"
                        android:paddingLeft="@dimen/dimen_15dp"
                        android:paddingRight="@dimen/dimen_15dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Type of Business : "
                            android:textColor="@color/text_44"
                            android:textSize="@dimen/dimen_10dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Sole Proprietorship"
                            android:textColor="@color/text_44"
                            android:textSize="@dimen/dimen_10dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dimen_15dp"
                        android:paddingRight="@dimen/dimen_15dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="invisible"
                            android:textColor="@color/text_44"
                            android:textSize="@dimen/dimen_10dp" />

                        <TextView
                            android:id="@+id/tv_view_attachment"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dimen_5dp"
                            android:drawableStart="@drawable/ic_file"
                            android:lineSpacingExtra="10sp"
                            android:paddingBottom="@dimen/dimen_5dp"
                            android:paddingTop="@dimen/dimen_10dp"
                            android:text="@string/view_attachment"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/dimen_10dp" />



                    </LinearLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
