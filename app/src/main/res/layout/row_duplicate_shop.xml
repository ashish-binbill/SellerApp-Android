<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_1dp"
        android:layout_marginRight="@dimen/dimen_1dp"
        android:layout_marginTop="@dimen/dimen_1dp"
        android:elevation="@dimen/dimen_10dp"
        app:cardCornerRadius="@dimen/dimen_10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:padding="@dimen/dimen_15dp">

                <include
                    layout="@layout/layout_no_user_image"
                    android:layout_width="@dimen/dimen_80dp"
                    android:layout_height="@dimen/dimen_80dp"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:layout_toRightOf="@id/rl_image_layout"
                    android:text=""
                    android:textColor="@color/text_44"
                    android:textSize="@dimen/dimen_14dp" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:layout_toRightOf="@id/rl_image_layout"
                    android:text=""
                    android:textColor="@color/text_44"
                    android:textSize="@dimen/dimen_12dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/card_selected"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#55000000"
                android:padding="@dimen/dimen_15dp"
                android:visibility="gone">

                <include layout="@layout/layout_selected_user_card" />

            </RelativeLayout>

        </FrameLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>