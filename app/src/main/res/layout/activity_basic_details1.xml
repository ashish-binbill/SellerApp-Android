<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.binbill.seller.Registration.BasicDetails1Activity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="@dimen/dimen_10dp">

        <include layout="@layout/app_toolbar" />
    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/dimen_20dp"
        android:paddingLeft="@dimen/dimen_30dp"
        android:paddingRight="@dimen/dimen_30dp">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottom_layout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/dimen_15dp">

                <EditText
                    android:id="@+id/et_shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_55dp"
                    android:layout_below="@id/tv_error_mobile"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:background="@drawable/edittext_bg"
                    android:hint="@string/shop_name_asterisk"
                    android:inputType="text"
                    android:lineSpacingExtra="-1sp"
                    android:paddingLeft="@dimen/dimen_12dp"
                    android:editable="false"
                    android:paddingRight="@dimen/dimen_12dp"
                    android:textColor="@color/text_44"
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/dimen_15dp" />

                <TextView
                    android:id="@+id/tv_error_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_shop_name"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:fontFamily="sans-serif"
                    android:text=""
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="@dimen/dimen_10dp"
                    android:textStyle="normal"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/et_business_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_55dp"
                    android:layout_below="@id/tv_error_shop_name"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:background="@drawable/edittext_bg"
                    android:hint="@string/business_name_asterisk"
                    android:inputType="text"
                    android:lineSpacingExtra="-1sp"
                    android:paddingLeft="@dimen/dimen_12dp"
                    android:paddingRight="@dimen/dimen_12dp"
                    android:textColor="@color/text_44"
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/dimen_15dp" />

                <TextView
                    android:id="@+id/businees_name_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_business_name"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:lineSpacingExtra="4.5sp"
                    android:text="Exactly as in your business license"
                    android:textColor="@color/text_44"
                    android:textSize="@dimen/dimen_10dp" />

                <TextView
                    android:id="@+id/tv_error_business_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/businees_name_hint"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:fontFamily="sans-serif"
                    android:text=""
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="@dimen/dimen_10dp"
                    android:textStyle="normal"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/et_business_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_error_business_name"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:background="@drawable/edittext_bg"
                    android:hint="@string/business_address_asterisk"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="-1sp"
                    android:maxLines="3"
                    android:minHeight="@dimen/dimen_55dp"
                    android:paddingLeft="@dimen/dimen_12dp"
                    android:paddingRight="@dimen/dimen_12dp"
                    android:scrollHorizontally="false"
                    android:scrollbars="vertical"
                    android:textColor="@color/text_44"
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/dimen_15dp" />

                <TextView
                    android:id="@+id/tv_error_business_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_business_address"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:fontFamily="sans-serif"
                    android:text=""
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="@dimen/dimen_10dp"
                    android:textStyle="normal"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/et_state"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_55dp"
                    android:layout_below="@id/tv_error_business_address"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:background="@drawable/edittext_bg"
                    android:drawableRight="@drawable/ic_dropdown"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/state"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="-1sp"
                    android:maxLines="3"
                    android:minHeight="@dimen/dimen_55dp"
                    android:paddingLeft="@dimen/dimen_12dp"
                    android:paddingRight="@dimen/dimen_12dp"
                    android:textColor="@color/text_44"
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/dimen_15dp" />

                <TextView
                    android:id="@+id/tv_error_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_state"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:fontFamily="sans-serif"
                    android:text=""
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="@dimen/dimen_10dp"
                    android:textStyle="normal"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/et_city"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_55dp"
                    android:layout_below="@id/tv_error_state"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:background="@drawable/edittext_bg"
                    android:drawableRight="@drawable/ic_dropdown"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/city"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="-1sp"
                    android:maxLines="3"
                    android:minHeight="@dimen/dimen_55dp"
                    android:paddingLeft="@dimen/dimen_12dp"
                    android:paddingRight="@dimen/dimen_12dp"
                    android:textColor="@color/text_44"
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/dimen_15dp" />

                <TextView
                    android:id="@+id/tv_error_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_city"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:fontFamily="sans-serif"
                    android:text=""
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="@dimen/dimen_10dp"
                    android:textStyle="normal"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/et_locality"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_55dp"
                    android:layout_below="@id/tv_error_city"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:background="@drawable/edittext_bg"
                    android:drawableRight="@drawable/ic_dropdown"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/locality"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="-1sp"
                    android:maxLines="3"
                    android:minHeight="@dimen/dimen_55dp"
                    android:paddingLeft="@dimen/dimen_12dp"
                    android:paddingRight="@dimen/dimen_12dp"
                    android:textColor="@color/text_44"
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/dimen_15dp" />

                <TextView
                    android:id="@+id/tv_error_locality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_locality"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:fontFamily="sans-serif"
                    android:text=""
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="@dimen/dimen_10dp"
                    android:textStyle="normal"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/et_pincode"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_55dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv_error_locality"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext_bg"
                    android:hint="@string/pin_code"
                    android:inputType="number"
                    android:lineSpacingExtra="-1sp"
                    android:maxLength="6"
                    android:paddingLeft="@dimen/dimen_12dp"
                    android:paddingRight="@dimen/dimen_12dp"
                    android:textColor="@color/text_44"
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/dimen_15dp" />

                <TextView
                    android:id="@+id/tv_error_pincode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_pincode"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:fontFamily="sans-serif"
                    android:text=""
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="@dimen/dimen_10dp"
                    android:textStyle="normal"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/upload_image_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:layout_below="@id/tv_error_pincode"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_upload_shop_image"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_55dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_bg"
                        android:clickable="false"
                        android:drawableRight="@drawable/ic_camera"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/upload_shop_image"
                        android:inputType="text"
                        android:lineSpacingExtra="-1sp"
                        android:paddingLeft="@dimen/dimen_12dp"
                        android:paddingRight="@dimen/dimen_12dp"
                        android:textColor="@color/text_44"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/dimen_15dp" />

                    <TextView
                        android:id="@+id/view_image"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingRight="@dimen/dimen_10dp"
                        android:text="@string/view"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/dimen_14dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/image_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_below="@id/upload_image_layout"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingRight="@dimen/dimen_10dp"
                    android:text=""
                    android:textAllCaps="true"
                    android:visibility="gone"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/dimen_12dp" />

            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <com.binbill.seller.CustomViews.AppButton
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_55dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:lineSpacingExtra="-5.5sp"
                android:text="@string/next"
                android:textColor="@color/color_white"
                app:sizeOfText="@dimen/dimen_20dp"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/btn_submit_progress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_55dp"
                android:layout_below="@id/et_mobile"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:background="@drawable/rounded_button"
                android:gravity="center"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/color_white"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/color_white"
                    android:indeterminateTintMode="src_in"
                    android:secondaryProgress="@color/color_white" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
