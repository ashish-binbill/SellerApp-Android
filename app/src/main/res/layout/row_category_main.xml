<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    card_view:cardCornerRadius="1dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/rel"
        android:paddingTop="@dimen/dimen_24dp"
        android:paddingBottom="@dimen/dimen_24dp"
        android:paddingLeft="@dimen/dimen_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_item"
            android:layout_width="@dimen/dimen_75dp"
            android:layout_height="@dimen/dimen_75dp"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:src="@drawable/landing_3"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_item"
            android:layout_width="@dimen/dimen_150dp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_toRightOf="@id/iv_item"
            android:text=" "
            android:textStyle="normal"
            android:textColor="#444444"
            android:textSize="@dimen/dimen_15dp" />

        <CheckBox
            android:id="@+id/chkSelected"
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:button="@drawable/category_selector"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
<!--
        <view
            android:id="@+id/view_default"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/chkSelected"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dimen_54dp"
            android:background="@color/afafaf"></view>-->

    </RelativeLayout>

</android.support.v7.widget.CardView>