<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="@dimen/dimen_10dp">

        <include layout="@layout/app_toolbar" />
    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/full_screen_loader" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/points_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/dimen_7dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="-1sp"
            android:text="@string/_1_rs"
            android:textColor="@color/text_44"
            android:textSize="@dimen/dimen_16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_points"
            android:layout_width="@dimen/dimen_150dp"
            android:layout_height="@dimen/dimen_55dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:background="@drawable/edittext_bg"
            android:hint="@string/points_string"
            android:inputType="number"
            android:lineSpacingExtra="-1sp"
            android:maxLength="5"
            android:paddingLeft="@dimen/dimen_12dp"
            android:paddingRight="@dimen/dimen_12dp"
            android:textColor="@color/text_44"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/dimen_15dp" />

        <TextView
            android:id="@+id/tv_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="-1sp"
            android:text="@string/points_string"
            android:textColor="@color/text_44"
            android:textSize="@dimen/dimen_16dp"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="3.5sp"
        android:layout_below="@id/points_layout"
        android:text="@string/example_loyalty_points"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/dimen_12dp" />

    <TextView
        android:id="@+id/min_point_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_20dp"
        android:lineSpacingExtra="-1sp"
        android:text="@string/minimum_points_for_redemption"
        android:textColor="@color/text_44"
        android:layout_below="@id/example"
        android:textSize="@dimen/dimen_15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_min_points"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_55dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:background="@drawable/edittext_bg"
        android:hint="@string/enter_points_string"
        android:inputType="number"
        android:lineSpacingExtra="-1sp"
        android:maxLength="5"
        android:layout_below="@id/min_point_header"
        android:paddingLeft="@dimen/dimen_12dp"
        android:paddingRight="@dimen/dimen_12dp"
        android:textColor="@color/text_44"
        android:textColorHint="@color/hint_color"
        android:textSize="@dimen/dimen_15dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_55dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dimen_30dp"
            android:layout_marginRight="@dimen/dimen_30dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/rounded_button"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="@dimen/dimen_25dp"
                android:layout_height="@dimen/dimen_25dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/color_white"
                android:foregroundGravity="center"
                android:gravity="center"
                android:indeterminate="true"
                android:indeterminateTint="@color/color_white"
                android:indeterminateTintMode="src_in"
                android:secondaryProgress="@color/color_white"
                android:visibility="gone" />


            <com.binbill.seller.CustomViews.AppButton
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="@string/save"
                android:textSize="@dimen/dimen_16dp"
                android:visibility="visible" />

        </FrameLayout>

    </RelativeLayout>
</LinearLayout>
