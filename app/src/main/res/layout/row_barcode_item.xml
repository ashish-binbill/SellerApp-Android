<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_10dp"
    android:background="@color/color_white"
    app:cardCornerRadius="@dimen/dimen_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_5dp">

        <ImageView
            android:id="@+id/iv_offer"
            android:layout_width="@dimen/dimen_80dp"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:src="@drawable/ic_placeholder_sku" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_offer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:text="Baker Street Toast Pita Chips Jalapeno Chips Masala"
                android:textColor="@color/text_44"
                android:textSize="@dimen/dimen_14dp" />

            <TextView
                android:id="@+id/tv_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:textColor="@color/text_44"
                android:textSize="@dimen/dimen_10dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_offer_mrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="MRP 100"
                android:textColor="@color/text_77"
                android:textSize="@dimen/dimen_16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_offer_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRICE 100"
                    android:textColor="@color/text_77"
                    android:textSize="@dimen/dimen_14dp" />

                <TextView
                    android:id="@+id/tv_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:text="5% Discount"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/dimen_12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_offer_expiry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expire on :"
                        android:drawablePadding="@dimen/dimen_10dp"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/dimen_12dp" />

                    <EditText
                        android:id="@+id/et_expiry_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_bg"
                        android:drawableRight="@drawable/small_calendar"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/dd_mm_yyyy"
                        android:inputType="text"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:drawablePadding="@dimen/dimen_10dp"
                        android:lineSpacingExtra="-1sp"
                        android:visibility="gone"
                        android:padding="@dimen/dimen_5dp"
                        android:textColor="@color/text_44"
                        android:textColorHint="@color/light_grey"
                        android:textSize="@dimen/dimen_10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_offer_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_10dp"
                        android:src="@drawable/ic_edit" />

                    <ImageView
                        android:id="@id/iv_offer_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_10dp"
                        android:src="@drawable/ic_delete" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>