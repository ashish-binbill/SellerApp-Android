<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_1dp"
    android:background="@color/color_white"
    app:cardCornerRadius="@dimen/dimen_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/off_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:background="@color/colorAccent"
            android:drawableRight="@drawable/ic_cancel_white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:text="Mark Available/Busy"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_12dp" />


        <RadioGroup
            android:id="@+id/radio_group_availability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/available"
                style="@style/RadionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:paddingStart="@dimen/dimen_8dp"
                android:text="@string/available"
                android:textColor="@color/text_44"
                android:textSize="@dimen/dimen_16dp" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/busy"
                style="@style/RadionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:paddingStart="@dimen/dimen_8dp"
                android:text="@string/busy"
                android:textColor="@color/text_44"
                android:textSize="@dimen/dimen_16dp" />

        </RadioGroup>


    </LinearLayout>
</android.support.v7.widget.CardView>
