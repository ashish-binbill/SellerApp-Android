<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_5dp"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="6.5sp"
                android:text="Date : Jul 31, 2018"
                android:textColor="@color/text_44"
                android:textSize="@dimen/dimen_12dp" />

            <TextView
                android:id="@+id/tv_credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="6.5sp"
                android:text="Credit : 500"
                android:textColor="@color/text_44"
                android:textSize="@dimen/dimen_12dp" />

            <TextView
                android:id="@+id/tv_remarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:ellipsize="end"
                android:lineSpacingExtra="3.5sp"
                android:maxLines="4"
                android:text="Lorem jhsgfjhsgmet, consectetur adipiscing elit sed do eiusmod tempor incididunt dolore."
                android:textColor="@color/text_44"
                android:textSize="@dimen/dimen_10dp"
                android:visibility="visible" />
        </LinearLayout>

        <RadioButton
            android:id="@+id/rb_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:focusable="false"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:theme="@style/RadionButton" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/divider" />

</LinearLayout>