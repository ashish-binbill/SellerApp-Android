<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_5dp"
    android:background="@color/color_white"
    app:cardCornerRadius="@dimen/dimen_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_5dp">

        <ImageView
            android:id="@+id/iv_offer"
            android:layout_width="@dimen/dimen_60dp"
            android:layout_height="@dimen/dimen_60dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:src="@drawable/ic_placeholder_sku" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_offer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Baker Street Toast Pita Chips Jalapeno Chips Masala"
                    android:textColor="@color/text_44"
                    android:textSize="@dimen/dimen_14dp" />

                <ImageView
                    android:id="@+id/iv_offer_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_10dp"
                    android:src="@drawable/ic_delete_big" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_offer_discounted_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRICE Rs100"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/text_44"
                    android:textSize="@dimen/dimen_14dp" />

                <TextView
                    android:id="@+id/tv_offer_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:text="(10% off)"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/dimen_14dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_offer_mrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MRP Rs430"
                android:textColor="@color/text_77"
                android:textSize="@dimen/dimen_11dp" />

            <TextView
                android:id="@+id/tv_stock_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:fontFamily="sans-serif"
                android:text="@string/offer_valid_till_stocks_last"
                android:textColor="@color/text_77"
                android:textSize="@dimen/dimen_9dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_offer_expiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="Expire on : 22 Jul, 2018"
                android:textColor="@color/text_77"
                android:textSize="@dimen/dimen_10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_view_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:fontFamily="sans-serif"
                android:text="View Details"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/dimen_12dp"
                android:visibility="gone"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_offer_already_added"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:visibility="gone"
                android:textColor="@color/color_33c600"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="Added to Your Offer List"
                />

            <LinearLayout
                android:id="@+id/ll_btn_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp">

                <Button
                    android:id="@+id/btn_add_to_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_30dp"
                    android:background="@drawable/rounded_button_cylinder"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingRight="@dimen/dimen_10dp"
                    android:text="@string/add_to_your_offers_list"
                    android:textAllCaps="false"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_12dp" />

                <Button
                    android:id="@+id/btn_need_this_item"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_30dp"
                    android:background="@drawable/rounded_button_cylinder_stroke"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingRight="@dimen/dimen_10dp"
                    android:text="@string/i_need_this_item"
                    android:textAllCaps="false"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/dimen_12dp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>