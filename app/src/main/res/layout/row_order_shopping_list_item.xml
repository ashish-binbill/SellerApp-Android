<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_fmcg_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_5dp"
        android:paddingLeft="@dimen/dimen_20dp"
        android:paddingRight="@dimen/dimen_20dp"
        android:paddingTop="@dimen/dimen_5dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_sku_image"
                android:layout_width="@dimen/dimen_80dp"
                android:src="@drawable/ic_placeholder_sku"
                android:scaleType="fitXY"
                android:layout_height="@dimen/dimen_80dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dimen_10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Baker Street Toast Pita Chips Jalapeno Chips"
                    android:textColor="@color/text_44"
                    android:textSize="@dimen/dimen_12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_item_measurement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(250g)"
                        android:textColor="@color/text_77"
                        android:textSize="@dimen/dimen_11dp" />

                    <TextView
                        android:id="@+id/tv_item_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/text_77"
                        android:textSize="@dimen/dimen_11dp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_unavailable"
                android:layout_width="@dimen/dimen_48dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg_order"
                android:gravity="center"
                android:padding="@dimen/dimen_10dp"
                android:tag="1"
                android:text="@string/item_not_available"
                android:textColor="@color/text_77"
                android:textSize="@dimen/dimen_14dp" />

        </LinearLayout>

        <EditText
            android:id="@+id/et_alternate_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_35dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/edittext_bg_order"
            android:hint="@string/suggest_replacement"
            android:inputType="textNoSuggestions"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:textColor="@color/text_77"
            android:visibility="gone"
            android:textColorHint="@color/text_77_80"
            android:textSize="@dimen/dimen_14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_7dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:background="@drawable/edittext_bg_order"
                android:drawableRight="@drawable/ic_dropdown"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="e.g. 250 gm"
                android:inputType="textNoSuggestions"
                android:lineSpacingExtra="-1sp"
                android:padding="@dimen/dimen_10dp"
                android:textColor="@color/text_77"
                android:textColorHint="@color/text_77"
                android:textSize="@dimen/dimen_10dp" />

            <EditText
                android:id="@+id/et_quantity_other_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:background="@drawable/edittext_bg_order"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="e.g. 250 gm"
                android:visibility="gone"
                android:inputType="textNoSuggestions"
                android:lineSpacingExtra="-1sp"
                android:padding="@dimen/dimen_10dp"
                android:textColor="@color/text_77"
                android:textColorHint="@color/text_77"
                android:textSize="@dimen/dimen_10dp" />

            <EditText
                android:id="@+id/et_quantity_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:background="@drawable/edittext_bg_order"
                android:drawableRight="@drawable/ic_dropdown"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="2 Nos"
                android:layout_weight="0.65"
                android:inputType="textNoSuggestions"
                android:lineSpacingExtra="-1sp"
                android:padding="@dimen/dimen_10dp"
                android:textColor="@color/text_77"
                android:textColorHint="@color/text_77"
                android:textSize="@dimen/dimen_10dp" />

            <com.binbill.seller.CustomViews.PrefixEditText
                android:id="@+id/et_item_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:background="@drawable/edittext_bg_order"
                android:hint="@string/add_price"
                android:inputType="numberDecimal"
                android:minWidth="@dimen/dimen_120dp"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_10dp"
                android:textColor="@color/text_77"
                android:textColorHint="@color/text_77_80"
                android:textSize="@dimen/dimen_14dp"
                app:prefix_string="@string/rupee_sign" />

        </LinearLayout>

        <View
            android:id="@+id/v_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@color/border_grey" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ll_service_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_30dp"
        android:paddingLeft="@dimen/dimen_40dp"
        android:paddingRight="@dimen/dimen_20dp"
        android:paddingTop="@dimen/dimen_30dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_service_image"
            android:layout_width="@dimen/dimen_70dp"
            android:layout_height="@dimen/dimen_70dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_30dp"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="2sp"
            android:text="Car Cleaner"
            android:textColor="@color/text_44"
            android:textSize="@dimen/dimen_15dp" />


    </LinearLayout>

</LinearLayout>