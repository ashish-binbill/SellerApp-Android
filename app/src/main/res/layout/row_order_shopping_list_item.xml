<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_fmcg_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_5dp"
        android:paddingLeft="@dimen/dimen_20dp"
        android:paddingRight="@dimen/dimen_20dp"
        android:paddingTop="@dimen/dimen_5dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dimen_10dp"
                android:drawableStart="@drawable/ic_small_check"
                android:fontFamily="sans-serif-medium"
                android:text="Baker Street Toast Pita Chips Jalapeno Chips"
                android:textColor="@color/text_44"
                android:textSize="@dimen/dimen_12dp" />

            <TextView
                android:id="@+id/tv_item_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="X 2"
                android:textColor="@color/text_77"
                android:textSize="@dimen/dimen_12dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_measurement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_25dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:text="(250g)"
            android:textColor="@color/text_77"
            android:textSize="@dimen/dimen_11dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_7dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:drawableRight="@drawable/ic_dropdown"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/available_quantity"
                android:lineSpacingExtra="-1sp"
                android:padding="@dimen/dimen_10dp"
                android:textColor="@color/text_77"
                android:layout_weight="1"
                android:textColorHint="@color/text_77"
                android:textSize="@dimen/dimen_10dp" />

            <com.binbill.seller.CustomViews.PrefixEditText
                android:id="@+id/et_item_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:background="@drawable/edittext_bg"
                android:hint="@string/add_price"
                android:inputType="numberDecimal"
                android:minWidth="@dimen/dimen_120dp"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_10dp"
                android:textColor="@color/text_77"
                android:textColorHint="@color/text_77_80"
                android:textSize="@dimen/dimen_14dp"
                app:prefix_string="@string/rupee_sign" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_unavailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/edittext_bg"
            android:gravity="center_horizontal"
            android:padding="@dimen/dimen_10dp"
            android:tag="1"
            android:text="@string/item_not_available"
            android:textColor="@color/text_77"
            android:textSize="@dimen/dimen_10dp" />

        <View
            android:id="@+id/v_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@color/border_grey" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ll_service_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_30dp"
        android:paddingLeft="@dimen/dimen_40dp"
        android:paddingRight="@dimen/dimen_20dp"
        android:paddingTop="@dimen/dimen_30dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_service_image"
            android:layout_width="@dimen/dimen_70dp"
            android:layout_height="@dimen/dimen_70dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_30dp"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="2sp"
            android:text="Car Cleaner"
            android:textColor="@color/text_44"
            android:textSize="@dimen/dimen_15dp" />


    </LinearLayout>

</LinearLayout>