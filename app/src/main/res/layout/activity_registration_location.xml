<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/mainLay"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_map"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="@dimen/dimen_10dp">

        <include layout="@layout/app_toolbar" />
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_below="@id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/et_share_location"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_55dp"
                android:background="@drawable/edittext_bg"
                android:hint="@string/share_location"
                android:editable="false"
                android:layout_marginTop="@dimen/dimen_35dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:lineSpacingExtra="-1sp"
                android:layout_marginLeft="@dimen/dimen_24dp"
                android:layout_marginRight="@dimen/dimen_24dp"
                android:drawableRight="@drawable/ic_location_indicator"
                android:paddingLeft="@dimen/dimen_12dp"
                android:paddingRight="@dimen/dimen_12dp"
                android:textColor="@color/text_44"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/dimen_15dp" />

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="@dimen/dimen_27dp"
                android:text="@string/location_text"
                android:layout_below="@id/et_share_location"
                android:textColor="@android:color/holo_red_light"
                android:textSize="@dimen/dimen_10dp"
                android:textStyle="normal"
                android:visibility="visible" />

            <EditText
                android:id="@+id/et_shop_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_55dp"
                android:layout_below="@id/tv_message"
                android:background="@drawable/edittext_bg"
                android:hint="@string/shop_name"
                android:inputType="textEmailAddress"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:lineSpacingExtra="-1sp"
                android:layout_marginLeft="@dimen/dimen_24dp"
                android:layout_marginRight="@dimen/dimen_24dp"
                android:paddingLeft="@dimen/dimen_12dp"
                android:paddingRight="@dimen/dimen_12dp"
                android:textColor="@color/text_44"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/dimen_15dp" />

            <EditText
                android:id="@+id/et_shop_no"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_55dp"
                android:layout_below="@id/et_shop_name"
                android:background="@drawable/edittext_bg"
                android:hint="@string/shop_number"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:lineSpacingExtra="-1sp"
                android:layout_marginLeft="@dimen/dimen_24dp"
                android:layout_marginRight="@dimen/dimen_24dp"
                android:inputType="number"
                android:paddingLeft="@dimen/dimen_12dp"
                android:paddingRight="@dimen/dimen_12dp"
                android:textColor="@color/text_44"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/dimen_15dp" />

            <EditText
                android:id="@+id/et_shop_pin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_55dp"
                android:layout_below="@id/et_shop_no"
                android:background="@drawable/edittext_bg"
                android:hint="@string/shop_pin"
                android:inputType="number"
                android:digits="0123456789"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:lineSpacingExtra="-1sp"
                android:layout_marginLeft="@dimen/dimen_24dp"
                android:layout_marginRight="@dimen/dimen_24dp"
                android:paddingLeft="@dimen/dimen_12dp"
                android:paddingRight="@dimen/dimen_12dp"
                android:textColor="@color/text_44"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/dimen_15dp" />
        </RelativeLayout>
    </ScrollView>

    <com.binbill.seller.CustomViews.SquareAppButton
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_55dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:lineSpacingExtra="-5.5sp"
        android:text="@string/next"
        android:layout_alignParentBottom="true"
        android:textColor="@color/color_white"
        android:visibility="visible"
        app:sizeOfText="@dimen/dimen_20dp" />

</RelativeLayout>

