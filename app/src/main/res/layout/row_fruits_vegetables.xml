<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    card_view:cardCornerRadius="1dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_24dp"
            android:paddingBottom="@dimen/dimen_24dp">

            <ImageView
                android:id="@+id/iv_item"
                android:layout_width="@dimen/dimen_75dp"
                android:layout_height="@dimen/dimen_75dp"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:src="@drawable/landing_3"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_item"
                android:layout_width="@dimen/dimen_150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_toRightOf="@id/iv_item"
                android:text=" "
                android:textColor="#444444"
                android:textSize="@dimen/dimen_15dp"
                android:textStyle="normal" />

            <CheckBox
                android:id="@+id/chkSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:button="@drawable/category_selector"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_24dp">

            <TextView
                android:id="@+id/tv_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_1dp"
                android:text="Quantity"
                android:textColor="#999999"
                android:textSize="@dimen/dimen_15dp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/et_quantity"
                android:layout_width="143dp"
                android:layout_height="57dp"
                android:layout_below="@id/tv_quantity"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="2dp"
                android:background="@drawable/edittext_bg"
                android:gravity="center|left"
                android:editable="false"
                android:focusableInTouchMode="false"
                android:inputType="numberDecimal"
                android:lineSpacingExtra="-1sp"
                android:paddingLeft="@dimen/dimen_12dp"
                android:paddingRight="@dimen/dimen_12dp"
                android:textColor="@color/text_44"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/dimen_15dp" />

            <TextView
                android:id="@+id/tv_mrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/et_quantity"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:layout_marginRight="86dp"
                android:layout_marginBottom="-1dp"
                android:layout_toRightOf="@+id/et_quantity"
                android:gravity="center"
                android:text="MRP"
                android:textColor="#999999"
                android:textSize="@dimen/dimen_15dp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/et_mrp"
                android:layout_width="147dp"
                android:layout_height="57dp"
                android:layout_below="@id/tv_quantity"
                android:layout_marginLeft="@dimen/dimen_30dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/et_quantity"
                android:background="@drawable/edittext_bg"
                android:inputType="numberDecimal"
                android:lineSpacingExtra="-1sp"
                android:paddingLeft="@dimen/dimen_12dp"
                android:paddingRight="@dimen/dimen_12dp"
                android:textColor="@color/text_44"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/dimen_15dp" />

            <TextView
                android:id="@+id/tv_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_toRightOf="@+id/et_mrp"
                android:text="Discount"
                android:textColor="#999999"
                android:textSize="@dimen/dimen_15dp"
                android:textStyle="normal"
                android:visibility="gone" />

            <EditText
                android:id="@+id/et_discount"
                android:layout_width="@dimen/dimen_113dp"
                android:layout_height="@dimen/dimen_55dp"
                android:layout_below="@id/tv_discount"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:layout_marginTop="@dimen/dimen_3dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_toRightOf="@+id/et_mrp"
                android:background="@drawable/edittext_bg"
                android:inputType="numberDecimal"
                android:lineSpacingExtra="-1sp"
                android:paddingLeft="@dimen/dimen_12dp"
                android:paddingRight="@dimen/dimen_12dp"
                android:textColor="@color/text_44"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/dimen_15dp"
                android:visibility="gone" />

        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>